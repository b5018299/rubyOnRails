	<h2>Please Login</h2>
	<%= form_tag sessions_path do %>
		<%= text_field_tag :userid, nil, placeholder: 'Enter Your Username', class: 'form-control' %><br />
		<%= password_field_tag :password, nil, placeholder: 'Enter Your	Password', class: 'form-control' %><br />

		<div class="form-group">
			<%=submit_tag "Log In", class:'btn btn-primary' %>
		</div>
	<% end %>

