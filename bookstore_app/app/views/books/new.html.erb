<div class="container">
	<h1> Add New Book</h1>

	<%= form_for :book , url: books_path do |f| %>
	<div class="form-group">
		<%= f.label :Title %>
		<%= f.text_field :Title %>
	</div>

	<div class="form-group">
		<%= f.label :Price %>
		<%= f.number_field :Price %>
	</div>

	<div class="form-group">
		<%= f.label :Book_id %>
		<%= f.number_field :Book_id %>
	</div>

	<div class="form-group">
		<%= f.label :Publisher %>
		<%= f.text_field :Publisher %>
	</div>

	<div class="form-group">
		<%= f.label :Description %>
		<%= f.text_area :Description %>
	</div>

	<div class="form-group">
		<%= f.submit %>
	</div>

	<% end %>
</div>