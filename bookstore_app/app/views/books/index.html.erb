<div class="container">
	<h2>Books Available</h2>
	<table border="1" class="table">
		<tr>
			<th>Title<hd>
			<th>Book ID</th>
			<th>Price</th>
			<th>Publisher</th>
			<th>Desription</th>
			<th>View Details</th>
		</tr>
		<% @books.each do |book| %>
			<tr>
				<td> <%= book.Title %> </td>
				<td> <%= book.Book_id %> </td>
				<td> <%= book.Price %> </td>
				<td> <%= book.Publisher %> </td>
				<td> <%= book.Description %> </td>
				<td> <%= link_to 'Book Page', book_path(book) %> </td>
			</tr>
		<% end %>
	</table>
</div>