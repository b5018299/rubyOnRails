<div class="container">

	<%= form_tag search_novels_path, method: :get do %>
		<%= text_field_tag :term, nil, placeholder: 'Search',
		class:'form-control' %>
		<%= submit_tag "Search", class:'btn btn-default' %>
 	<% end %>
 	
	<h2>Novels</h2>
	<table border="1" class="table">
		<tr>
			<th>Title<hd>
			<th>Author ID</th>
			<th>Publisher ID</th>
			<th>Genre ID<hd>
			<th>Price<hd>
			<th>ISBN</th>
			<th>Publication<hd>
			<th>Pages<hd>
			<th>format<hd>
			<th>Description<hd>
			<th>Details<hd>
			<th>Edit<hd>
			<th>Delete<hd>
		</tr>
		<% @novels.each do |novel| %>
			<tr>
				<td> <%= novel.Title %> </td>
				<td> <%= novel.Author_id %> </td>
				<td> <%= novel.Publisher_id %> </td>
				<td> <%= novel.Genre_id %> </td>
				<td> <%= novel.Price %> </td>
				<td> <%= novel.isbn %> </td>
				<td> <%= novel.Publication %> </td>
				<td> <%= novel.Pages %> </td>
				<td> <%= novel.Format %> </td>
				<td> <%= novel.Description %> </td>
				<td> <%= link_to 'Show', novel_path(novel) %> </td>
				<td> <%= link_to 'Edit', edit_novel_path(novel) %> </td>
				<td>
					<%=
						link_to 'Delete', novel_path(novel),
						method: :Delete,
						data: {confirm: "Are you sure you want to delete details"}
					%>
				</td>
			</tr>
		<% end %>
	</table>
</div>