<div class="container">
	<h1> Add a New Publisher</h1>

	<%= form_for :publisher , url: publishers_path do |f| %>
	<div class="form-group">
		<%= f.label :Name %><br />
		<%= f.text_field :Name, class:'form-control' %><br />
	</div>

	<div class="form-group">
		<%= f.label :Country %><br />
		<%= f.text_field :Country, class:'form-control' %><br />
	</div>

	<div class="form-group">
		<%= f.submit "Submit", class:'btn btn-primary' %>
	</div>

	<div class="form-group">
		<%=link_to "Cancel", publishers_path, class:'btn btn-default' %>
	</div>

	<% end %>
</div>