<div class="container">
	<h1> Add New Genre</h1>

	<%= form_for :genre , url: genres_path do |f| %>
	<div class="form-group">
		<%= f.label :Name %><br />
		<%= f.text_field :Name, class:'form-control' %><br />
	</div>

	<div class="form-group">
		<%= f.submit "Submit", class:'btn btn-primary' %>
	</div>

	<div class="form-group">
		<%=link_to "Cancel", authors_path, class:'btn btn-default' %>
	</div>

	<% end %>
</div>